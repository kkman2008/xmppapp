<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/while_blue"
        android:padding="5dp">


        <ImageView
            android:id="@+id/listview_item_imageview_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            >
            <TextView
                android:id="@+id/listview_item_textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="标题"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_marginBottom="18dp"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:src="@mipmap/statusongoing"
                android:layout_margin="0dp"
                android:layout_gravity="right"
                android:scaleType="fitEnd"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/listview_item_textView_title"
                />
        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/clocktime"
                    android:paddingBottom="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                android:id="@+id/tv_question_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:textSize="14dp"
                android:text="2018-09-10"
                />
                <android.support.v4.widget.Space
                    android:layout_width="11dp"
                    android:layout_height="match_parent"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张教授 主持"
                    android:textSize="13dp"

                    />
                <android.support.v4.widget.Space
                    android:layout_width="11dp"
                    android:layout_height="match_parent"

                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingTop="5dp"
                    android:background="@mipmap/message_dark"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/listview_item_textView_pinglun"
                    />

                <TextView
                    android:id="@+id/listview_item_textView_pinglun"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:text="结论12条  "
                    android:textSize="13dp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"

        android:background="#c7bebe" />

</LinearLayout>


</LinearLayout>
